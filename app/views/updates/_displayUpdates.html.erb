<!DOCTYPE html>
<html>
  <head>
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyA9JBz-80iyKF7JGzeikG0zHHqWdF2CLPs&sensor=true">
    </script>

  <script>
    function initialize()
    {
      var mapProp = {
        center:new google.maps.LatLng(43.67023,-79.38676),
        zoom:12,
        mapTypeId:google.maps.MapTypeId.ROADMAP
      };
      var map=new google.maps.Map(document.getElementById("googleMap")
        ,mapProp);
    }

    google.maps.event.addDomListener(window, 'load', initialize);
  </script>
  </head>

  <body>
    <div id="googleMap" style="width:500px;height:380px;"></div>
  
    <p>
      <% @updates.each do |update| %>
        <%= update.user.username%> says: <%= update.comment %> at <%= update.created_at.localtime.strftime('%I:%M%p')%></br>
      <% end %> 
    </p>
  </body>
</html>